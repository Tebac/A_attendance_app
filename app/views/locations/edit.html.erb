<% provide(:title, 'Edit Location') %>
<% provide(:class_text, 'location--edit') %>
<% provide(:button_text, '更新') %>
<h1>拠点情報の編集</h1>
  <p>このページでは、拠点情報を編集します。</p>
  <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @location, url: user_location_path(@user, @location), local: true, method: :patch) do |f| %>
    <%= render partial: 'shared/error_messages', locals: {object: @location } %>
  
    <%= f.label :id, class: "label-#{yield(:class_text)}" %>
    <%= f.text_field :id, class: "form-control" %>
   
    <%= f.label :location_name, class: "label-#{yield(:class_text)}" %>
    <%= f.text_field :location_name, class: "form-control" %>
    
    <%= f.label :location_type, class: "label-#{yield(:class_text)}" %>
    <%= f.text_field :location_type, class: "form-control" %>
    
  
    <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
    <%= link_to "キャンセル", user_locations_path(@user), class: "btn btn-default btn-form" %>
  <% end %>
  </div>
</div>
   
