<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
      <% provide(:class_text, 'location--edit') %>
      <% provide(:button_text, '更新') %>
      <%= render 'shared/error_messages', object: @location %>
    
    <h1 class="modal-title">拠点情報の編集</h1>
    <div class="modal-body">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
    
        <%= form_with(model: @location, url: user_location_path, local: true, method: :patch) do |f| %>
      
      
        <%= f.label :location_number, class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :location_number, class: "form-control" %>
       
        <%= f.label :location_name, class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :location_name, class: "form-control" %>
        
        <%= f.label :location_type, class: "label-#{yield(:class_text)}" %>
        <%= f.select :location_type, ['出勤', '退勤'], {}, class: "form-control" %>
        
      
        <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
        <%= link_to "キャンセル", user_locations_path, class: "btn btn-default btn-form" %>
      <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
   
