<% provide(:class_text, 'employees-working') %>

<div class="content">
  <div class="header">
    <h1 class="title">出勤中の社員一覧</h1>
  </div>
  
  <div class="col-md-3 col-md-offset-9">
  <p>ユーザー名検索</p>
  <%= form_with url: users_path, method: :get, local: true do |f| %>
    <%= f.text_field :name %>
   <button class="btn btn-primary btn-sm"><% f.submit :Search %>検索</button>
   <% end %>
</div>

<div class="col-md-10 col-md-offset-1">
  <%= will_paginate(@users) %>
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th><%= User.human_attribute_name :employee_number %></th>
        <th><%= User.human_attribute_name :name %></th>
      </tr>
    </thead>
    
    <tbody>
      <% Date.current == @worked_on %>
        <% @user_attendance_info.each do |user| %>
          <tr>
            <td><%= user.employee_number %></td>
            <td><%= user.name %></td>
          </tr>
        <% end %>

          
      </tbody>
  </table>

  <%= will_paginate(@users) %>
</div>
</div>