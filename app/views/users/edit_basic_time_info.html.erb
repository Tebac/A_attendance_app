<% provide(:title, '基本情報の更新') %>
<% provide(:button_text, '編集') %>
<h1>基本情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: update_basic_time_info_user_path(@user),local: true, method: :patch) do |f| %>
    <!--<!%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>-->
      <%= render 'shared/error_messages', object: @user %>
          
          <%= f.label :基本勤務時間 %>
          <%= f.time_field :basic_time, class: 'form-control' %>
          
          <%= f.label :指定勤務時間 %>
          <%= f.time_field :work_time, class: 'form-control' %>
          
           <%= f.submit yield(:button_text), class: "btn btn-primary" %>
        <% end %>
  </div>
</div>